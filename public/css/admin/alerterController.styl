.alerterC-mwrapper
    width fit-content
    height fit-content
    position fixed
    transform translate(-50%, -50%)
    top 50%
    left 50%
    z-index 1000
    display none

.alerterC-background
    width 100%
    height -webkit-fill-available
    background #000000b8
    z-index 100
    display none
    position fixed

.alerterC-auth
    width 330px
    height 400px
    background white
    border-radius 5px
    
.alerterC-auth-top
    width 100%
    height 45%
    position relative 
    
.alerterC-auth-top-icon
    width 100px
    height 100px
    // background black
    transform translate(-50%, -50%)
    top 50%
    left 50%
    position absolute
    background-image url(/img/admin/fingerprint.svg)
    background-size cover
    background-position center
    background-repeat no-repeat
    
.alerterC-auth-middle
    width 100%
    height 35%
    position relative
    
.alerterC-auth-middle-text
    width 80%
    margin 0 auto
    height fit-content
    h6
        text-align: center;
        margin: 0;
        font-weight: 800;
        font-size: 15px;
        color: #4a4a4a;
        font-family: nunito;
    p
        text-align: center;
        margin: 0;
        font-size: 12px;
        margin-top: 5px;
        color: gray;
        font-family: nunito;
        font-weight: 100;
        padding-left: 10px;
        padding-right: 10px;
        
.alerterC-auth-middle-input
    width fit-content
    height fit-content
    margin 0 auto
    margin-top 25px
    input
        outline: none;
        width: 210px;
        height: 30px;
        border: none;
        border-bottom: 1px solid #c0c2d0;
        padding-left: 20px;
        font-family: nunito;
        font-weight: 400;
        font-size: 14px;

.alerterC-auth-bottom
    width 100%
    height 20%
    position relative
    input
        outline: none;
        transform: translate(-50%, -50%);
        top: 50%;
        left: 50%;
        position: relative;
        background: transparent;
        border: none;
        font-family: nunito;
        font-weight: 600;
        font-size: 17px;
        color: #ff586f;
        text-transform: uppercase;
        letter-spacing: 1px;
        cursor: pointer;
    
.alerterC-controls
    width fit-content
    height fit-content
    display none

.alerterC-controls-container
    width fit-content
    height fit-content
    display flex

.alerterC-object
    width 400px
    height 600px
    background #151515
    margin-left 25px
    margin-right 25px
    border-radius 5px
    
.alerterC-object-header
    width 100%
    height 15%
    position relative
    
.alerterC-object-header-icon
    width: 50px;
    height: 50px;
    background-image: url(/img/admin/fire.svg);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    transform: translateY(-50%);
    top: 50%;
    position: absolute;
    left 5%

.alerterC-object-header-title
    width fit-content
    height fit-content
    transform: translateY(-50%);
    top: 50%;
    position: absolute;
    left calc(5% + 50px)
    p
        margin: 0;
        font-size: 30px;
        letter-spacing 2px
        color: #929292;
        margin-left: 10px;
        text-transform: uppercase;
    
.alerterC-object-body	
    width 100%
    height 75%
    position relative
    
.alerterC-object-body-shortcuts
    width 90%
    margin 0 auto
    height 30%

.alerterC-object-body-shortcuts-header
    width fit-content
    height 50px
    position relative
    p
        margin: 0;
        transform: translateY(-50%);
        top: 50%;
        position: relative;
        margin-left: 20px;
        color: white;
        font-family: nunito;
        font-weight: 600;
        letter-spacing: 0.4px;
        font-size 14px
        
.alerterC-object-body-shortcuts-body
    width 100%
    height calc(100% - 50px)
    position relative
    
.alerterC-object-body-shortcuts-object-wrapper
    width calc(100% - 40px)
    display flex
    height 100%
    margin 0 auto
    
.alerterC-object-body-shortcuts-object
    width: 60px;
    cursor pointer
    height: 60px;
    border-radius: 15px;
    background-color: #1b1b1b;
    margin-right: 13px;
    border: 2px solid #444444;
    transition .3s
    position relative
    background-size 40px
    background-position center
    background-repeat no-repeat
    &.evac
        background-image url(/img/admin/evacuation.svg)
    &.PA
        background-image url(/img/admin/speakerphone.svg)
    &.cancel
        background-image url(/img/admin/cancel.svg)
    &:hover
        background-color #252525
        