.AA-lockdown-wrapper
    width: 520px;
    height: 630px;
    transform translate(-50%,  -50%)
    top 50%
    left 50%
    display none
    position absolute
    z-index 100
     
    
.AA-lockdown-wrapper-alert-symbol-wrapper
    width: 400px;
    height: 400px;
    position: absolute;
    transform: translate(-50%, -50%);
    left: 50%;
    top: 50%;
    transition .5s
    &.active
        width: 200px;
        height: 200px;
        position: absolute;
        transform: translateX(-50%);
        left: 50%;
        top: -90px;
        
.AA-lockdown-wrapper-alert-symbol
    width 100%
    height 100%
    background-image url(/img/admin/caution.svg)
    background-size cover
    background-position center
    background-repeat no-repeat
    z-index 10
    position relative
    
.AA-lockdown-wrapper-alert-symbol-bgw
    width: 60px;
    height: 210px;
    background: #fff;
    transform: translate(-50%,-50%);
    top: 61%;
    left: 50%;
    position: absolute;
    z-index: 1;
    transition .4s
    &.active
        height 100px
.AA-lockdown-wrapper-alert-controller
    width: 520px;
    height: 0px;
    background: #f2f1f7;
    border-radius: 10px
    transition 1s
    &.active
        height 630px
     
.AA-lockdown-wrapper-alert-controller-container
    width 100%
    height 100%
    display none

.AA-lockdown-wrapper-alert-controller-top-buffer
    width 100%
    height 100px
    
.AA-lockdown-wrapper-alert-controller-top-heading
    width 100%
    height 50px
    position relative
    p
        margin: 0;
        transform: translate(-50%,-50%);
        top: 50%;
        left: 50%;
        position: absolute;
        font-size: 30px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        width: fit-content;
        color: #2b2b2b;

.AA-lockdown-wrapper-alert-controller-body
    width 100%
    height calc(100% - 150px)
    
.AA-lockdown-wrapper-alert-controller-body-desc
    width 100%
    height 150px
    position relative
    p
        margin 0
        transform translateY(-50%)
        top 50%
        text-align center
        position absolute
        padding-left 10%
        padding-right 10%

.AA-lockdown-wrapper-alert-controller-body-actions
    width 100%
    height calc(100% - 150px)
    position relative

.AA-lockdown-wrapper-alert-controller-body-actions-action
    width 80%
    height 45px
    margin 0 auto
    position relative
    display -webkit-box
    &.finalBUTT
        height 70px
    input
        width: 160px;
        height: 33px;
        background: red;
        color: white;
        border: none;
        border-radius: 2px;
        font-family: nunito;
        font-weight: 600;
        font-size: 13px;
        transform: translateX(-50%);
        bottom 0px
        outline none
        cursor pointer
        left: 50%;
        position: absolute;
        transition .3s
        &:hover
            transform scale(1.1), translateX(-50%);
    
.AA-lockdown-wrapper-alert-controller-body-actions-action-left
    width 50%
    height 100%
    position relative
    p
        text-align right
        padding-right 10%
        transform translateY(-50%)
        top 50%
        position relative
        margin 0
        font-family: nunito;
        font-weight: 600;
.AA-lockdown-wrapper-alert-controller-body-actions-action-right
    width 50%
    height 100%
    position relative
    
.AA-lockdown-wrapper-alert-controller-body-actions-action-right-info-wrapper
    width 110px
    height 30px
    background #2b2c2b
    border-radius 5px
    position relative
    transform translateY(-50%)
    top 50%
    &.online
        background #2ade2a
    &.offline
        background #ff0000
    
    p
        margin: 0;
        transform: translate(-50%,-50%);
        top: 50%;
        left: 50%;
        font-size: 13px;
        position: absolute;
        color: #fff;
        font-family: nunito;
        font-weight: 600;
        text-transform: uppercase;
    
.alerterC-object-body-actions
    width: 90%;
    margin: 0 auto;
    height: 70%;

.alerterC-object-body-actions-header
    width: fit-content;
    height: 50px;
    position: relative;
    p
        margin: 0;
        transform: translateY(-50%);
        top: 50%;
        position: relative;
        margin-left: 20px;
        color: #fff;
        font-family: nunito;
        font-weight: 600;
        letter-spacing: .4px;
        font-size: 14px;

.alerterC-object-body-actions-body
    width calc(100% - 40px)
    margin 0 auto
    height calc(100% - 50px)
    

.alerterC-fire-stat-object-key
    width 100%
    height 30px
    display -webkit-box
    position relative
    p
        margin: 0;
        color: #888;
        position: absolute;
        font-size: 14px;
        font-weight: 300;
        transform translateY(-50%)
        top 50%
        letter-spacing: 1px;

.afsok-one, .afsok-two
    width 25%
    height 100%
    position relative
    
.afsok-three
    width 50%
    height 100%
    position relative
    p
        transform translate(-50%, -50%) !important
        top 50% !important
        left 50% !important
        margin-left 0 !important
        position absolute !important
    
.alerterC-fire-stat-object-container
    width 100%
    height fit-content
    max-height calc(100% - 30px)
    overflow-y scroll

.alerterC-fire-stat-object
    width 100%
    height 50px
    display -webkit-box
    position relative
    border-radius 4px
    overflow hidden
    p
        top: 50%;
        margin: 0;
        transform: translateY(-50%);
        position: relative;
        color: white;
        font-family: roboto;
        font-weight: 400;
        margin-left: 5px;
    
.afsok-status-wrapper
    transform: translate(-50%, -50%);
    width: 80px;
    height: 30px;
    top: 50%;
    left: 50%;
    position: absolute;
    z-index: 100;
    p
        transform translate(-50%, -50%) !important
        top 50% !important
        left 50% !important
        margin-left 0 !important
        position absolute !important
    
.afsok-status-background
    width 100%
    height 100%
    &.green
        background #449844
    &.red
        background #984444