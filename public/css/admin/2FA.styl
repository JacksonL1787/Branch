.TFA-wrapper
    width 100%
    height -webkit-fill-available
    position fixed
    top 0px
    
.TFA-container
    width 100%
    height 100%
    position relative
    
.TFA-center
    width fit-content
    height fit-content
    position absolute
    transform translate(-50%, -50%)
    top 50%
    left 50%
    
.TFA-center-wrapper
    width 700px
    height 160px
    position relative
    display -webkit-box
    
.TFA-center-wrapper-left
    width 40%
    height 100%
    position relative
    
.TFA-center-wrapper-right
    width 60%
    height 100%
    position relative

.TFA-center-wrapper-right-text-wrapper
    width 100%
    height 60%
    position relative
    
.TFA-center-wrapper-right-text
    width 100%
    height fit-content
    transform translateY(-50%)
    top 50%
    position absolute
    h7, p
        margin 0
    p
        font-weight: 200;
        font-size: 16px;
    h7
        font-weight: 600;
        font-family: nunito;
        font-size: 21px;
        
.TFA-center-wrapper-right-inputs-wrapper
    width 100%
    height 40%
    position relative
    
.TFA-center-wrapper-right-inputs
    width fit-content
    height fit-content
    transform translateY(-50%)
    top 50%
    position absolute
    input[type="text"]
        margin: 0;
        padding: 0;
        width: 210px;
        height: 35px;
        font-family: roboto;
        font-weight: 300;
        padding-left: 20px;
        font-size: 16px;
        border: none;
        border-left: 1px solid black;
        margin-top: -1px;
        border-bottom: 1px solid black;
        border-top: 1px solid black;
        outline none
    
    input[type="button"]
        margin: 0;
        padding: 0px;
        width: 80px;
        height: 39px;
        background: #4d99ff;
        border none
        margin-bottom: 0px;
        color: white;
        font-family: roboto;
        font-weight: 400;
        bottom: 2px;
        position: relative;
        outline: none;
        cursor: pointer;
        
.TFA-center-wrapper-left-icon
    width 130px
    height 130px
    background-image url('/img/admin/TFA.svg')
    background-size cover
    background-position center
    background-repeat no-repeat
    transform translate(-50%, -50%)
    top 50%
    left 50%
    position relative
    
.TFA-branch-top
    width 60px
    height 60px
    position absolute
    top 40px
    left 5%
    background-image url('/img/gradCap.svg')
    background-size cover
    background-position center
    background-repeat no-repeat