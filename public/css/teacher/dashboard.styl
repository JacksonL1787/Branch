body
    overflow-x hidden

.mainDashboard
    background #F5F9FB
    width calc(100% - 250px)
    height 100%
    position absolute
    top 0
    left 250px
    overflow-y auto
    overflow-x hidden
    .dashboard-outer-wrap
        margin-top 20px
        width 85%
        margin-left 7.5%
        position relative
        .top
            width 100%
            padding-bottom 40px
            p.title
                color #5a5a5a
                font-weight 200
                font-size 30px
                margin 0
        .main-dashboard-content
            width 100%
            .widget-wrap
                background white
                box-shadow 0 0 5px 3px rgba(0,0,0,0.02)
                position relative
                padding 15px 0

.messages-container
    position absolute
    top 10px
    right 20px
    height fit-content
    width fit-content
    z-index 20
    .message-wrap
        background white
        border 1px solid #e6eaec
        width 275px
        height fit-content
        padding 5px 7px
        border-radius .3em
        margin-bottom 10px
        animation showMessage 16s
        p.message
            color #2c3e50
            font-size 14px

@keyframes showMessage
    0%
        transform translateX(400px)
    7%
        transform translateX(0)
    93%
        transform translateX(0)
    100%
        transform translateX(400px)