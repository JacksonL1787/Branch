body
    overflow-x hidden

.overlay
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    background rgba(0,0,0,0.35)
    z-index -1
    opacity 0
    transition opacity .3s

.mainDashboard
    background #F5F9FB
    width calc(100% - 250px)
    height 100%
    position absolute
    top 0
    left 250px
    overflow-y auto
    overflow-x hidden
    .open-nav-btn
        position fixed
        top 30px
        left 10px
        cursor pointer
        width fit-content
        display none
        height fit-content
        .bar
            width 23px
            height 3px
            background #808080
            margin 4px 0
            transition background .3s
        &:hover
            .bar
                background #16BDF4
    .dashboard-outer-wrap
        width 85%
        max-width 1400px
        margin 20px auto 0
        position relative
        .top
            width 100%
            padding-bottom 40px
            p.title
                color #5a5a5a
                font-weight 200
                font-size 30px
                margin 0
        .main-dashboard-content
            width 100%
            .widget-wrap
                background white
                box-shadow 0 0 5px 3px rgba(0,0,0,0.05)
                position relative
                padding 15px 0

.messages-container
    position absolute
    top 10px
    right 20px
    height fit-content
    width fit-content
    z-index 20
    .message-wrap
        background white
        border 1px solid #e6eaec
        width 275px
        height fit-content
        padding 5px 7px
        border-radius .3em
        margin-bottom 10px
        animation showMessage 16s
        p.message
            color #2c3e50
            font-size 14px

@keyframes showMessage
    0%
        transform translateX(400px)
    7%
        transform translateX(0)
    93%
        transform translateX(0)
    100%
        transform translateX(400px)

.loader
    background rgba(0,0,0,0.07)
    width 60px
    height 15px
    border-radius 125px
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    &::after
        content ""
        width 15px
        height 15px
        border-radius 15px
        background #16BDF4
        position absolute
        left 0
        top 0
        animation loading 1.5s cubic-bezier(0.77, 0, 0.175, 1) infinite

@keyframes loading
    0%
        left 0
    50%
        left calc(100% - 15px)
    100%
        left 0

@media only screen and (max-width 1000px)
    .mainDashboard
        .dashboard-outer-wrap
            width 95% !important

@media only screen and (max-width 950px)
    .mainDashboard
        width 100% !important
        left 0 !important
        .open-nav-btn
            display block !important
        .dashboard-outer-wrap
            width calc(95% - 80px) !important
    .side-nav
        left -250px !important
        transition left .4s !important
        position fixed !important
        &.open
            left 0 !important
        .close-nav-btn
            display block !important

@media only screen and (max-width 450px)
    .mainDashboard
        .dashboard-outer-wrap
            .widget-wrap
                .top-container
                    width 100% !important
                    margin-left 0 !important
                    .title
                        text-align center !important
                        