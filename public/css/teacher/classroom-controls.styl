.projector-control-widget
    width calc(50% - 5px)
    margin-right 5px
    height 300px
    display inline-block

.door-control-widget
    width calc(50% - 5px)
    float right
    height 300px
    margin-left 5px

.climate-control-widget,
.blinds-control-widget,
.lighting-control-widget
    margin-top 10px
    width 100%
    height 300px

.lighting-control-widget
    margin-bottom 30px

.classroom-controls-widget
    .top-container
        height fit-content
        width 95%
        margin-left 2.5%
        padding 15px 0
        .title
            color #4c4c4c
            font-weight bold
            font-size 25px
            margin 0 10px 0 10px