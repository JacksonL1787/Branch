.basic-info-widget
    .info-content-wrap
        width 90%
        margin-left 5%
        display flex
        justify-content left
        flex-flow wrap row
        padding 0 0 40px
        .info-wrap
            margin-right 50px
            margin-top 20px
            width fit-content
            label
                color #9c9c9c
                font-size 13px
                font-weight bold
            a
                display block
                color #16BDF4
                text-decoration none
                &:hover
                    text-decoration underline
            p
               margin 0 
               color #4C4C4C
.notes-widget
    height fit-content
    max-height 400px
    overflow auto
    .notes-content
        width 90%
        margin-left 5%
        .add-note-wrap
            label
                color #9c9c9c
                font-size 13px
                font-weight bold
            .note-input
                background #fdfeff
                border solid 1px #e6eaec
                color #4c4c4c
                outline none
                font-size 15px
                padding 7px 10px
                width 40%
                max-width 400px
                min-width 200px
            .add-note-btn
                border none
                font-size 15px
                color white
                background #16BDF4
                cursor pointer
                outline none
                height 32px
                padding 0 15px
                margin-left 5px
                transition background .25s
                &:hover
                    background #14afe2
        .all-notes-wrap
            width 100%
            margin-top 30px
            .no-notes
                display none
                text-align center
                font-size 22px
                font-weight 300
                margin 20px 0
                color #909090
            .note-wrap
                width calc(100% - 30px)
                margin-bottom 30px
                border-radius .3em
                display flex
                position relative
                height fit-content
                border 1px solid #dcdcdc
                padding 10px 15px
                label
                    color #9c9c9c
                    font-size 13px
                    font-weight bold
                p
                    margin 0
                    font-size 14px
                    color #4c4c4c
                    word-wrap break-word
                .created-by-wrap
                    min-width 120px
                    max-width 120px
                .date-created-wrap
                    min-width 90px
                    max-width 90px
                    margin-left 20px
                .message-wrap
                    width calc(100% - 291px)
                    margin-left 20px
                .delete-note
                    position absolute
                    width 23px
                    height 23px
                    top 50%
                    border-radius 23px
                    cursor pointer
                    right 20px
                    transform translateY(-50%)
                    background rgba(0,0,0,0.3)
                    transition background .25s
                    &:hover
                        background tomato
                    p
                        color white
                        position absolute
                        display inline
                        margin-block-start 0 !important
                        margin-block-end 0 !important
                        left 50%
                        word-wrap initial !important
                        top 50%
                        margin 0 !important
                        transform translate(-50%, -50%)
                        font-size 13px

.schedule-widget
    margin-bottom 30px
    .schedule-content
        display flex
        width 90%
        margin-left 5%
        .current-class-wrap
            margin-top 100px
            label
                color #9c9c9c
                font-size 13px
                font-weight bold
            p
                margin 0
                color #4c4c4c
        .day-schedule-wrap
            margin-left 100px
            h2
                color #4c4c4c
                margin 0
            .period-wrap
                margin 15px 0
                position relative
                width fit-content
                label.period-label
                    color #9c9c9c
                    font-size 12px
                    font-weight bold
                span
                    margin-left 15px
                    color #16BDF4
                    cursor pointer
                    text-decoration none
                    margin-top 2px
                    &:hover
                        text-decoration underline
                    &:hover + .period-info-menu
                        display block
                .period-info-menu
                    width fit-content
                    height fit-content
                    position absolute
                    margin-top 5px
                    display none
                    left 60px
                    box-shadow 0 0 5px 3px rgba(0,0,0,0.03)
                    padding 10px 5px
                    background white
                    z-index 3
                    border solid 1px #c7c7c7
                    border-radius .2em
                    .info-wrap
                        label
                            color #9c9c9c
                            font-size 12px
                            font-weight bold
                            margin 0
                        p
                            margin 2px 0 0
                            font-size 14px
                &.period-4-wrap,
                &.period-5-wrap,
                &.period-6-wrap
                    .period-info-menu
                        bottom 25px !important
.schedule-widget,
.notes-widget
    margin-top 10px
  
.student-widget
    .top-container
        height fit-content
        width calc(100% - 10px)
        margin-left 10px
        padding 15px 0
        .title
            color #4c4c4c
            font-weight bold
            font-size 25px
            margin 0 10px 0 10px

.delete-note-modal
    width 300px
    height fit-content
    .modal-main
        .confirm-delete-note
            border none
            font-size 15px
            color white
            background #16BDF4
            cursor pointer
            outline none
            height 32px
            padding 0 15px
            float right
            transition background .25s
            &:hover
                background #14afe2
            
@media only screen and (max-width: 1000px)
    .basic-info-widget
        .info-content-wrap
            flex-flow column !important
            width fit-content !important
            .info-wrap
                margin-right 0 !important