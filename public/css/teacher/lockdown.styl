body
    overflow-y hidden
    background #2f2f2f
    height 100vh
    height: calc(var(--vh, 1vh) * 100);

.modal-overlay
    background rgba(0,0,0,0.5)
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    z-index 50
    opacity 0
    visibility hidden
    transition opacity .3s, visibility .3s
    &.active
        opacity 1
        visibility visible

.lockdown-info-modal

.end-lockdown-modal
    width 350px
    height fit-content
    position fixed
    left 50%
    z-index 75
    top calc(50% + 20px)
    visibility hidden
    background #212121
    padding 10px 20px 20px
    opacity 0
    transform translate(-50%, -50%)
    border-radius .3em
    transition top .5s, opacity .3s, visibility .3s
    &.active
        top 50%
        opacity 1
        visibility visible
    .modal-top
        margin-top 30px
        position relative
        h2.modal-title
            margin 0
            color #dadada
            font-size 23px
        .close
            cursor pointer
            position absolute
            right -6px
            color #a0a0a0
            top -32px
            transition color .3s
            &:hover
                color white
    .modal-main
        margin-top 10px
        p
            margin 0
            color white
            word-wrap break-word
            font-size 13px
        .password-inpt
            margin 10px auto 0
            border 1px solid #424242
            outline none
            background none
            width calc(100% - 20px)
            color #e0e0e0
            border-radius .5em
            padding 7px 10px 8px
            font-size 14px
            box-shadow none
            transition border .3s, box-shadow .3s
            &:focus
                border 1px solid #ff3636
                box-shadow 0 0 12px 3px rgba(0,0,0,0.1)
        .incorrect
            color red
            font-size 12px
            opacity 0
            visibility hidden
            margin 3px 0 0 2px
            display inline
            transition opacity .2s, visibility .2s
            &.active
                opacity 1
                visibility visible
        .confirm-end-lockdown
            border none
            font-size 13px
            border-radius .5em
            color white
            background red
            cursor pointer
            outline none
            height 29px
            margin-top 10px
            padding 0 15px
            float right
            transition background .25s

.main-wrap
    width calc(100% - 400px)
    height 100vh
    height: calc(var(--vh, 1vh) * 100);
    position absolute
    top 0
    left 0
    background #2f2f2f
    z-index 4
    .logo
        background-position center
        background-size cover
        background-repeat no-repeat
        background-image url('/img/teacher/gradCap.svg')
        position absolute
        top 15px
        left 22px
        width 50px
        height 50px
    .end-lockdown
        background red
        border none
        border-radius .5em
        color white
        font-size 13px
        position absolute
        top 26px
        right 25px
        outline none
        cursor pointer
        padding 6px 12px
    .content
        margin 200px auto 0
        width 90%
        height calc(100% - 200px)
        position relative
        .header-wrap
            margin 0 auto
            width fit-content
            text-align center
            .icon
                width 100px
                height 100px
                opacity 0.9
                margin 0 auto 10px
            .title
                color lightgrey
                font-size 40px
                margin 0
                font-weight 900
                text-transform uppercase
            .lockdown-length
                color grey
                margin 2px 0 0
                font-size 16px
                font-weight 500
                .time
                    color white
        .divider
            width 60%
            height 1px
            background #424242
            margin 30px 0 30px 20%
        .update-outer-wrap
            width 100%
            height calc(100% - 255px)
            margin 0 auto 0
            overflow-y hidden
            overflow-x hidden
            h1.title
                color white
                font-size 25px
                margin 0 0 20px 0
                text-align center
            .inner-update-wrap
                width 90%
                margin-left 5%
                .update-wrap
                    background #2B2B2B
                    height fit-content
                    padding 15px 0 20px
                    border-radius .3em
                    width 100%
                    margin 10px 0
                    p
                        letter-spacing 0.3px
                    .top-wrap
                        display flex
                        width 90%
                        height fit-content
                        margin 0 0 5px 5%
                        .created-by
                            color #a7a7a7
                            margin 0 5px 0 0
                            font-size 12px
                            font-weight bold
                        .time
                            color grey
                            margin 0
                            font-size 11px
                            margin-top 0.5px
                    .message
                        color white
                        width 90%
                        margin-left 5%
                        font-size 17px
                        margin 0 0 0 5%
.chat-wrap
    width 400px
    border-left 1px solid #424242
    height 100vh
    height: calc(var(--vh, 1vh) * 100);
    position absolute
    top 0
    right 0
    background #2b2b2b
    z-index 5
    .top-wrap
        height 50px
        width 100%
        position relative
        border-bottom #424242 1px solid
        h2.title
            margin 0
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
            color #bfbfbf
            font-weight 500
            font-size 17px
    .content
        position relative
        width 95%
        height calc(100% - 51px)
        margin-left 2.5%
        .messages-wrap::-webkit-scrollbar
            width 0 !important
        .messages-wrap
            margin-top 5px
            overflow-y auto
            width 100%
            height calc(100% - 120px)
            position absolute
            p.no-messages
                color grey
                margin 30px 0 0
                font-size 15px
                text-align center
            .message-wrap
                width 100%
                margin-top 5px
                overflow-x hidden
                p
                    margin 0
                    &.confirm-update
                        color #808080
                        font-size 13px
                    .time
                        color grey
                        font-size 11px
                        font-weight: 500 !important
                    .name
                        color #16BDF4
                        font-size 12.5px
                        font-weight bold !important
                        letter-spacing 0.3px
                    .message
                        color #e6e6e6
                        font-size 12.5px
                        word-wrap break-word
                        font-weight: 500 !important
    .sender-wrap
        width 100%
        height 90px
        position absolute
        bottom 0
        border-top 1px solid #424242
        right 0
        padding-top 20px
        .inpt-wrap
            width 95%
            margin 0 auto
            height fit-content
            position relative
            input
                margin 0
                border 1px solid #424242
                outline none
                background none
                width calc(100% - 20px)
                color #e0e0e0
                border-radius .5em
                padding 12px 10px
                font-size 12px
                box-shadow none
                transition border .3s, box-shadow .3s
                &:focus
                    border 1px solid #16acde
                    box-shadow 0 0 12px 3px rgba(0,0,0,0.1)
        .send-btn-wrap
            width 95%
            margin 0 auto
            margin-top 10px
            height fit-content
            position relative
            button
                border-radius .5em
                color white
                background #16acde
                padding 7px 15px
                font-size 13px
                position absolute
                top 0
                outline none
                cursor pointer
                border none
                right 0
                transition background .3s
                &:hover
                    background #19c2fa